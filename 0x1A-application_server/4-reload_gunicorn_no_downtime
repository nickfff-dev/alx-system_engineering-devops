#!/usr/bin/env bash
# Find the Gunicorn master process ID
MASTER_PID=$(pgrep -f "gunicorn: master")

# Check if the master PID was found
if [[ -z "$MASTER_PID" ]]; then
    echo "Gunicorn master process not found."
    exit 1
fi

# Send the HUP signal to the master process to gracefully reload Gunicorn
kill -HUP "$MASTER_PID"

echo "Gunicorn has been reloaded successfully."
